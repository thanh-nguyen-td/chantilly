<div class="custom-text-list-container">
    <p>{{section.settings.text_head}}</p>
   <div class="text-list-content">
        <h2>{{section.settings.text_content}}</h2>
   </div>
</div>

{% style %}
    .custom-text-list-container {
    background: var(--color-pink-bg);
    text-align: center;
    padding: 70px;
    }
    .custom-text-list-container p{
        color: #707173;
        font-size:13px;
        margin-bottom:0px
    }
    .custom-text-list-container .text-list-content{
       
        display: flex;
        justify-content: center;
    }
    .text-list-content h2 {
        font-family: "ITC Galliard";
        max-width: 700px;
        font-size:34px;
        font-weight:400;    
        line-height: 1.2;
    }
{% endstyle %}
{% schema %}
{
    "name":"Text list",
    "tag":"section",
    "settings":[
        {
            "type": "text",
            "id": "text_head",
            "label": "Text head",
            "default": "CHANTILLY SWIMWEAR"
        },
        {
            "type": "text",
            "id": "text_content",
            "label": "Text Content",
            "default": "“We believe in two things: the pursuit of quality in everything we do, and looking after one another. Everything else should take care of itself.”"
        }
    ],
   
    "presets":[
        {
            "name":"Text list" 
        }
    ]
}
{% endschema %}